<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.virginia.cs.mooncake.wada.TagSelectActivity"
    tools:deviceIds="wear_round">

    <Button
        android:id="@+id/btnTagNext"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTagName"
        android:layout_toEndOf="@+id/btnTagBack"
        android:onClick="btnClick"
        android:text="Next" />

    <Button
        android:id="@+id/btnTagPrev"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnTagBack"
        android:layout_below="@+id/tvTagName"
        android:onClick="btnClick"
        android:text="Prev" />

    <TextView
        android:id="@+id/tvCurrentTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tvTagName"
        android:singleLine="false"
        android:text="aa" />

    <TextView
        android:id="@+id/tvTagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnTagBack"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:text="Subject: "
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTagSelect"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnTagBack"
        android:layout_toEndOf="@+id/btnTagBack"
        android:onClick="btnClick"
        android:text="Select" />

    <Button
        android:id="@+id/btnTagBack"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37dp"
        android:onClick="btnClick"
        android:text="Back" />
</RelativeLayout>
